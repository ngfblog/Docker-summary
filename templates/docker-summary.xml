<?xml version="1.0"?>
<Container>
  <Name>Docker Summary</Name>
  <Repository>nirgf/docker-summary:latest</Repository>
  <Registry>https://hub.docker.com/r/nirgf/docker-summary</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/ngfblog/Docker-summary</Support>
  <Overview>This container runs a lightweight Python web server that generates a visual summary of your running Docker containers, including container ID, name, status, image, IP, network, and creation time. The summary is displayed in a sortable, filterable dark-themed HTML table.</Overview>
  <Category>Tools:Utilities</Category>

  <Environment>
    <Variable>
      <Name>TZ</Name>
      <Value>Asia/Jerusalem</Value>
      <Description>Container Timezone</Description>
    </Variable>
  </Environment>

  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/docker-summary</HostDir>
      <ContainerDir>/app</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/var/run/docker.sock</HostDir>
      <ContainerDir>/var/run/docker.sock</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>

  <Ports>
    <Port>
      <HostPort>8090</HostPort>
      <ContainerPort>8090</ContainerPort>
      <Protocol>tcp</Protocol>
    </Port>
  </Ports>

</Container>
