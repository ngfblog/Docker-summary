<?xml version="1.0"?>
<Container>
  <Name>Docker Summary</Name>
  <Repository>nirgf/docker-summary:latest</Repository>
  <Registry>https://hub.docker.com/r/nirgf/docker-summary</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/ngfblog/Docker-summary</Support>
  <Project>https://github.com/ngfblog/Docker-summary</Project>
  <Overview>Generate a styled summary of Docker containers in HTML format, including live refresh, sort, and filter options.</Overview>
  <Category>Tools:Utilities</Category>
  <WebUI>http://[IP]:[PORT:8090]/view</WebUI>
  <Icon>https://raw.githubusercontent.com/ngfblog/Docker-summary/main/icon.png</Icon>

  <!-- Port -->
  <Config Name="Port" Target="8090" Default="8090" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="false"/>

  <!-- Docker socket -->
  <Config Name="Docker Socket" Target="/var/run/docker.sock" Default="/var/run/docker.sock" Mode="rw" Description="Docker socket access (required for container list)" Type="Path" Display="always" Required="true" Mask="false"/>

  <!-- Mount for persistent app data -->
  <Config Name="Appdata Path" Target="/app" Default="/mnt/user/appdata/docker-summary" Mode="rw" Description="Local appdata folder" Type="Path" Display="always" Required="true" Mask="false"/>

  <!-- Timezone -->
  <Config Name="Timezone" Target="TZ" Default="Asia/Jerusalem" Description="Timezone" Type="Variable" Display="always" Required="true" Mask="false"/>
</Container>
